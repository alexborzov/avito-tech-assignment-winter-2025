{
    "extends": "./typescript.remix.json",
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/.server/**/*.ts",
        "**/.server/**/*.tsx",
        "**/.client/**/*.ts",
        "**/.client/**/*.tsx"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/*": ["./app/*"]
        }
    }
}
