{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true,
        "defaultBranch": "main"
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": [".vscode/*"]
    },
    "formatter": {
        "enabled": true,
        "ignore": [],
        "lineWidth": 120,
        "lineEnding": "lf",
        "indentWidth": 4,
        "indentStyle": "space",
        "formatWithErrors": false,
        "attributePosition": "auto",
        "bracketSpacing": true,
        "useEditorconfig": false
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "lineEnding": "lf",
            "lineWidth": 120,
            "quoteStyle": "single",
            "semicolons": "asNeeded",
            "indentWidth": 4,
            "attributePosition": "auto",
            "indentStyle": "space",
            "jsxQuoteStyle": "single",
            "trailingCommas": "all",
            "bracketSpacing": true,
            "bracketSameLine": false,
            "quoteProperties": "asNeeded",
            "arrowParentheses": "asNeeded"
        }
    },
    "json": {
        "formatter": {
            "trailingCommas": "none",
            "indentWidth": 4
        }
    }
}
